<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
      <!-- <script src="https://kit.fontawesome.com/9519e19407.js" crossorigin="anonymous"></script> -->
      <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="style.css">
  </head>
  <body class="profileBody">
    <section class="container profileContain">

    <h1 class="profileh1">Check how long you have until your assignment is due!</h1>
    <% if (user.local.email) { %>
      <form action="/messages" method="POST">
        <input class="profileInput nameInput" type="text" value="<%= user.local.email %>" name="name">
        <input class="profileInput" type="text" placeholder="Assignment" name="msg">
        <button class="profileInput" type="submit">Submit</button>
      </form>


<div class="container">

<section class="big">

  <ul class="messages">
    <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span class="name"><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>

      <span><%= messages[i].clock %>

        <span><input class="profileInput" type="date" name="time-to" class="time-to" id="time-to" value="" onchange="calcTime(this.value)"></span>
      </span>
    </li>
  <% } %>
</ul>
<% } %>
</section>
<section class="timer">

  <span class="clock-day clock-timer"></span>
  <p class="clock-label">Days</p>
  <span class="clock-hours clock-timer"></span>
  <p class="clock-label">Hours</p>
  <span class="clock-minutes clock-timer"></span>
  <p class="clock-label">Minutes</p>
  <span class="clock-seconds clock-timer"></span>
  <p class="clock-label">Seconds</p>

</section>










</section>
</div>
<script src="main.js" charset="utf-8"></script>
</body>
</html>
